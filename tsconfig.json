{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "esnext",
		"target": "es6",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "Node",
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		},
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
